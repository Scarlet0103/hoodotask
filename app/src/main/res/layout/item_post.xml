<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_owner_post"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                tools:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/txt_owner_name"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                tools:text="Sample post title"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:paddingTop="1dp"
                android:src="@drawable/ic_heart"/>

            <ImageView
                android:id="@+id/post_comment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:paddingTop="0.1dp"
                android:paddingBottom="0.2dp"
                android:layout_marginStart="12dp"
                android:scaleX="-1"
                android:src="@drawable/ic_speech_bubble" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_post_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            tools:text="0 likes" />

        <TextView
            android:id="@+id/txt_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Sample post title" />

        <TextView
            android:id="@+id/txt_post_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:text="Sample post title" />

        <TextView
            android:id="@+id/txt_post_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            tools:text="Sample post title" />
    </LinearLayout>

</androidx.cardview.widget.CardView>